<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#3E50B4"
        android:gravity="bottom"
        android:padding="20dp"
        android:text="Pre-fab Homes"
        android:textColor="#fff"
        android:textSize="35sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/rightImage"
            android:src="@drawable/ic_share_variant_grey600_36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"/>
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/rightImage1"
            android:src="@drawable/ic_bookmark_grey600_36dp"
            android:layout_toLeftOf="@+id/rightImage"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_heart_grey600_36dp"
            android:layout_toLeftOf="@+id/rightImage1"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"/>
    </RelativeLayout>
</LinearLayout>