<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#D6D6D6"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Subtitle"
            android:layout_marginLeft="16dp"
            android:textColor="#000"
            android:textSize="24sp"
            android:gravity="bottom"
            android:layout_height="100dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/ic_heart_grey600_48dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/pic8"
            android:layout_height="40dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_dots_vertical_grey600_48dp"
            android:id="@+id/pic8"
            android:layout_toLeftOf="@+id/pic7"
            android:layout_height="40dp"/>

        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/ic_share_variant_grey600_48dp"
            android:id="@+id/pic7"
            android:layout_alignParentRight="true"
            android:layout_height="40dp"/>

    </RelativeLayout>

</LinearLayout>