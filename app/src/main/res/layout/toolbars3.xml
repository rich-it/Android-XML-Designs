<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C98F0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="46dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"

            android:padding="10dp"
            android:background="#fff">
            <ImageView
                android:id="@+id/menu"
                android:src="@drawable/ic_menu_grey600_36dp"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@+id/menu"
                android:text="Search hint"
                android:textColor="#757575"
                android:textSize="24sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:src="@drawable/ic_cast_grey600_36dp"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@+id/dots"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/dots"
                android:src="@drawable/ic_dots_vertical_grey600_36dp"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>