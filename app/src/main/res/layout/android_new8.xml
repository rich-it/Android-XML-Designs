<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#009688"
        android:paddingTop="16dp"
        android:paddingBottom="1dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_checkbox_blank_circle_grey600_48dp"
            android:tint="#05635A"
            android:paddingLeft="16dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear1"
            android:layout_toRightOf="@id/image1"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Contact Name"
                android:textColor="#FFFFFF"
                android:textSize="20sp"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="primary email@gmail.com"
                android:textColor="#BAFFFFFF"
                android:textSize="20sp"


                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear1"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_circle_white_36dp"
                android:layout_toRightOf="@id/image2"
                android:id="@+id/image2"
                android:paddingTop="16dp"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingTop="16dp"
        android:paddingBottom="1dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_checkbox_blank_circle_grey600_48dp"
            android:paddingLeft="16dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear1"
            android:layout_toRightOf="@id/image1"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="email2@mail.com"
                android:textSize="20sp"


                />



        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingTop="16dp"
        android:paddingBottom="1dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_checkbox_blank_circle_grey600_48dp"
            android:paddingLeft="16dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear1"
            android:layout_toRightOf="@id/image1"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="email3@mail.com"
                android:textSize="20sp"


                />



        </LinearLayout>


    </RelativeLayout>

</LinearLayout>