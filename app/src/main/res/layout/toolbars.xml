<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C98F0"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ic_movie_white_48dp"
               android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/ic_music_note_eighth_white_48dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:text="Music"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:src="@drawable/ic_message_reply_text_white_48dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:src="@drawable/ic_panorama_white_48dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:src="@drawable/ic_settings_white_48dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>