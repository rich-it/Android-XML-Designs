<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_menu_white_48dp"
                android:layout_margin="16dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:src="@drawable/ic_magnify_white_48dp"
                android:layout_toLeftOf="@+id/module"
                android:layout_margin="16dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:id="@+id/module"
                android:src="@drawable/ic_view_module_white_48dp"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </RelativeLayout>
        <LinearLayout
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="My files"
                android:textSize="36sp"
                android:textColor="#fff"
                android:layout_marginLeft="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@"
                android:src="@drawable/ic_folder_grey600_48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>