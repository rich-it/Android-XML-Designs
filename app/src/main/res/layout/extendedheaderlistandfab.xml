                    android:background="@drawable/circle"
                    android:padding="10dp"
                    android:src="@drawable/ic_folder_white_48dp" />
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/folder5"
                    android:layout_width="wrap_content"
